<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/contentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10.5sp"
        android:textColor="#868686"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="5.3sp"
        android:text="2019.11.18"
        />
    <ImageView
        android:id="@+id/gridContentImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/book_content"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gridContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="11.5sp"
            android:text="[연극]옥탑방고양이"
            />
        <TextView
            android:id="@+id/girdContentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.3sp"
            android:textColor="#777777"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13.8sp"
            android:text="서울 대학로 틴틴홀 "
            />
    </LinearLayout>
</LinearLayout>